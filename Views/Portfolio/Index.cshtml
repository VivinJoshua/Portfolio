@model List<Portfolio.Models.Works>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="img/p1.jpg">
    <!-- Meta Description -->
    <meta name="description" content="Portfolio">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Portfolio</title>

    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <!--
    CSS
    ============================================= -->
    <link rel="stylesheet" href="~/Content/linearicons.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/nice-select.css">
    <link rel="stylesheet" href="~/Content/animate.min.css">
    <link rel="stylesheet" href="~/Content/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/main.css">


</head>
<body>
    <div class="protfolio-wrap">
        <div class="site-blocks-cover overlay inner-page-cover" style="background-image: url('~/Images/bg.jpg');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center ">
                    <div class="col-md-7 ">
                        <h2 style="color:#FDF7F4">Hello! </h2>
                        <h1 style="color:#FDF7F4">I'm<span style="color:#FFD80F"> Vivin Jeya Joshua</span> </h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="site-block-profile-pic">
            <img src="~/Images/profile.png" alt="Image">
        </div>

        <!-- Start portfolio-area Area -->
        <section class="portfolio-area section-gap" id="portfolio">
            <div class="container">

                <h3 style="text-align:center">My Works</h3>
                <div class="filters">
                    <ul>
                        <li class="active" data-filter="*">All</li>

                        <li data-filter=".UIUX">UI/UX</li>
                        <li data-filter=".Other">Other</li>
                    </ul>
                </div>

                <div class="filters-content">
                    <div class="row grid">



                        @foreach(var val in Model)
                        {
                            var base64 = Convert.ToBase64String(val.Image);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <div class="single-portfolio col-sm-4 all ">
                                <div class="item">
                                    <img src="@imgSrc" alt="@val.Title"/>
                                    <div class="p-inner">
                                        <h5>@val.Title</h5>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>

            </div>
        </section>
    </div>


    <script src="js/vendor/jquery-2.2.4.min.js"></script>

    <script src="js/easing.min.js"></script>
    <script src="js/jquery.ajaxchimp.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.sticky.js"></script>
    <script src="js/jquery.nice-select.min.js"></script>
    <script src="js/parallax.min.js"></script>
    <script src="js/mail-script.js"></script>
    <script src="js/isotope.pkgd.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>
